+  def auth_username(self):
+    return self._cli.getUserId()
+
 class PlainClient:
 
   def __init__(self):
@@ -92,6 +95,9 @@ class PlainClient:
   def decode(self, bytes):
     return bytes
 
+  def auth_username(self):
+    return self.attrs.get("username")
+
 try:
   from saslwrapper import Client as _Client
   Client = WrapperClient

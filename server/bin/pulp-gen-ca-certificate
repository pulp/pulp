set -e

READ_PULP_CONF=\
$(cat << END
from pulp.server.config import config as pulp_conf
print pulp_conf.get('security', 'cakey')
print pulp_conf.get('security', 'cacert')
END
)

PULP_CONF=(`python -c "$READ_PULP_CONF"`)

# Safely create a private working directory that can be used to generate the
# CA private key.
TMP="$(mktemp -d)" || exit 1
CA_KEY=${PULP_CONF[0]}
CA_CRT=${PULP_CONF[1]}
CN=`hostname --fqdn`
ORG="PULP"

# create CA key
openssl genrsa -out $TMP/ca.key 4096 &> /dev/null

# create signing request
openssl req \
  -new \
  -key $TMP/ca.key \
  -out $TMP/ca.req \
  -subj "/CN=$CN/O=$ORG" &> /dev/null

# create a self-signed CA certificate
openssl x509 \
  -req \
  -days 7035 \
  -sha1 \
  -extensions ca  \
  -signkey $TMP/ca.key \
  -in $TMP/ca.req \
  -out $TMP/ca.crt &> /dev/null

# install
mv -Z $TMP/ca.key $CA_KEY
mv -Z $TMP/ca.crt $CA_CRT
rm $TMP/ca.req
chown root:apache $CA_KEY
chown root:apache $CA_CRT
chmod 640 $CA_KEY
chmod 640 $CA_CRT

# clean
rmdir $TMP
